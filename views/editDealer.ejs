<html>
    <head>
        <title>Account details</title>
        <meta charset="utf-8">
        <meta  name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div style="display: flex;">
              <div  class="navbar-header">
                <a style="color:white;" class="navbar-brand" href="/">Transaction Manage</a>
              </div>
              <div>
                <button class="btn btn-success navbar-btn"><a href="/addDealer" style="color:white;"><span class="glyphicon glyphicon-plus"></span> Add dealer</a></button>
              </div>
            </div>
            </div>
          </nav>
        <div class="container">
            <div style="margin-top:30px;" class="innerWrapper">
                <div class="header">
                    <h3 style="margin-left:100px;">Edit Dealer</h3>
                </div>
                <div class="input">
                <form autocomplete="off" method="POST" action="/edit/<%= dealer._id %>">
                    <div style="margin-top:15px;" class="singleInput">
                        <input class="form-control" type="text" name="name" value="<%= dealer.name %>">
                    </div>
                    <div style="margin-top:15px;" class="singleInput">
                        <input class="form-control" type="text" name="accountNumber" value="<%= dealer.accountNumber %>">
                    </div>
                    <div style="margin-top:15px;" class="singleInput">
                        <input class="form-control" type="text" name="IFSC" value="<%= dealer.IFSC %>">
                    </div>
                    <div style="margin-top:15px;" class="singleInput">
                        <input class="form-control" type="text" name="bankName" value="<%= dealer.bankName %>">
                    </div>
                    <div style="margin-top:15px;" class="singleInput">
                    <input class="btn btn-primary btn-block" type="submit">
                    </div>
                </form>
                </div>
            </div>

            
        </div>

    </body>
</html>
