<html>
    <head>
        <title>Account details</title>
        <meta charset="utf-8">
        <meta  name="viewport" content="width=device-width,initial-scale=1.0">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        </head>
    <body>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div style="display: flex;">
              <div  class="navbar-header">
                <a style="color:white;" class="navbar-brand" href="/">Transaction Manage</a>
              </div>
              <div>
                <button class="btn btn-success navbar-btn"><a href="/addDealer" style="color:white;"><span class="glyphicon glyphicon-plus"></span> Add dealer</a></button>
              </div>
            </div>
            </div>
          </nav>
        <div class="container">
            <% if(error && error.length>0){ %>
            <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
            <% } %>
            <% if(success && success.length>0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
            <% } %>
        </div>
        <% if(transactions.length > 0){ %>
          <h4 style="margin-left:25px;" class="card-title"><span class="glyphicon glyphicon-user">  </span>  <%= transactions[0].dealer.name %></h5>
            <h4 style="margin-left:25px;">Total amount:- <%= total %></h4>
        <% }else{ %>
          <h4 style="margin-left:25px;">No transaction found</h4>
        <% } %>
    
        
        <% transactions.forEach((transaction) => { %>
            <div class="card" style="width:30rem;margin-left:35px;box-shadow: 5px 10px 18px #888888;padding:10px;">
                <div class="card-body">
                  <h5 class="card-subtitle mb-2 text-muted">A/C Number:- <%= transaction.dealer.accountNumber %></h5>
                    <h4 class="card-subtitle mb-2 text-muted">Rs.<%= transaction.totalamount %></h4>
                    <h5 class="card-subtitle mb-2 text-muted"><span class="glyphicon glyphicon-calendar"></span> <%=  transaction.createdAt %></h5>
                  <button class="btn btn-primary btn-sm"><a href="/viewDetail/<%= transaction._id %>" style="color:white;">View Details</a></button>
                </div>
              </div>
        <% }) %>


    </body>
</html>